{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["src/*"],
      "@comp/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@type/*": ["src/types/*"],
      "@utils/*": ["src/utils/*"],
      "@gl/*": ["src/gl/*"]
    }
  }
}
